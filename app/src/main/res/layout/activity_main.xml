<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/textView" />

    <Button
        style="@style/buttonStyle"

        android:text="POPULAR MOVIES"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        />
    />

    <Button
        style="@style/buttonStyle"

        android:text="TOCK HAWK"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        />

    <Button
        style="@style/buttonStyle"

        android:text="BUID IT BIGGER"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        />
    />

    <Button
        style="@style/buttonStyle"

        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"

        android:maxWidth="150dp" />
    />

    <Button
        style="@style/buttonStyle"

        android:text="GO UBIQUITOUS"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
      />
    />

    <Button
        style="@style/buttonStyle"

        android:text="APSTONE"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        />
    />

</RelativeLayout>
